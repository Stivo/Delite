#!/bin/bash

#-XX:+UseConcMarkSweepGC 

$JAVA_HOME/bin/java -verbose:gc -server -d64 -XX:+UseCompressedOops -XX:+DoEscapeAnalysis -Xmx64g -Xms64g -Xmn50g -XX:+PrintGCDetails -XX:+PrintGCTimeStamps $JAVA_OPTS -cp $DELITE_HOME/runtime/target/scala_2.8.1/classes:$SCALA_HOME/lib/scala-library.jar:$SCALA_HOME/lib/scala-compiler.jar ppl.delite.runtime.Delite "$@"
