#!/bin/bash

#-XX:+UseConcMarkSweepGC 

$JAVA_HOME/bin/java -server -d64 -XX:+UseCompressedOops -XX:+DoEscapeAnalysis -Xmx64g -Xms64g -Xmn50g $JAVA_OPTS -cp $DELITE_HOME/runtime/target/scala_2.10.0-virtualized-SNAPSHOT/classes:$SCALA_VIRT_HOME/lib/scala-library.jar:$SCALA_VIRT_HOME/lib/scala-compiler.jar ppl.delite.runtime.Delite "$@"

