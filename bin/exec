#!/bin/bash

echo $JAVA_HOME/bin/java -verbose:gc -server -d64 -XX:+UseCompressedOops -XX:+DoEscapeAnalysis -Xmx18g -Xms18g -Xss128m -XX:+UseConcMarkSweepGC -XX:+PrintGCDetails -XX:+PrintGCTimeStamps $JAVA_OPTS -cp $DELITE_HOME/runtime/target/scala_2.8.1/classes:$SCALA_HOME/lib/scala-library.jar:$SCALA_HOME/lib/scala-compiler.jar:$DELITE_HOME/runtime/lib_managed/scala_2.8.1/compile/* ppl.delite.runtime.Delite "$@"
$JAVA_HOME/bin/java -Xrunhprof:cpu=samples,interval=10,depth=20 -server -d64 -XX:+UseCompressedOops -XX:+DoEscapeAnalysis -Xmx64g -Xms64g -Xmn24g -Xss128m -XX:+UseConcMarkSweepGC -Xbootclasspath/p:$DELITE_HOME/unsafe_classes/unsafe.jar $JAVA_OPTS -cp $DELITE_HOME/unsafe_classes/unsafe.jar:/home/viq/commons-math-2.2.jar:$DELITE_HOME/runtime/target/scala_2.8.1/classes:$SCALA_HOME/lib/scala-library.jar:$SCALA_HOME/lib/scala-compiler.jar:$DELITE_HOME/runtime/lib_managed/scala_2.8.1/compile/* ppl.delite.runtime.Delite "$@"
